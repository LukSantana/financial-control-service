enum EInvestimentType {
  FIXED
  VARIABLE
}

enum EInvestimentCategory {
  STOCKS
  CRYPTO
  REAL_STATE
  FIXED_INCOME
  TREASURY
  ETF
  BDR
  OTHER
}

model InvestimentCategory {
  id          Int                  @id @default(autoincrement())
  name        EInvestimentCategory
  type        EInvestimentType
  isNational  Boolean
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  Investments Investments[]
}

model Investments {
  id         Int                 @id @default(autoincrement())
  amount     Float?
  shares     Float?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  category   InvestimentCategory @relation(fields: [categoryId], references: [id])
  categoryId Int
}
