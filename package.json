{
  "name": "financial-control-service",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "test": "mocha 'tests/**/*.spec.ts' --config tests/.mocharc.yml",
    "test:unit": "mocha 'tests/unit/**/*.spec.ts' --config tests/.mocharc.yml",
    "test:integration": "mocha 'tests/integration/**/*.spec.ts' --config tests/.mocharc.yml",
    "test:watch": "mocha 'tests/**/*.spec.ts' --config tests/.mocharc.yml --watch",
    "test:unit:watch": "mocha 'tests/unit/**/*.spec.ts' --config tests/.mocharc.yml --watch",
    "test:integration:watch": "mocha 'tests/integration/**/*.spec.ts' --config tests/.mocharc.yml --watch --grep 'integration'",
    "test:coverage": "nyc --nycrc-path '.nyrc.json' mocha 'tests/**/*.spec.ts' --config tests/.mocharc.yml --reporter=text",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "build": "bun build src/index.ts --outdir dist --config tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "dev": "bun run --watch src/index.ts",
    "ts-check": "tsc --noEmit"
  },
  "author": "Luk",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.14.0",
    "@types/bun": "latest",
    "@types/chai": "^5.0.1",
    "@types/express": "^5.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "chai": "^5.1.2",
    "eslint": "^9.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "mocha": "^10.8.2",
    "prettier": "^3.4.1",
    "prisma": "^6.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "firebase": "^11.1.0",
    "firebase-admin": "^13.0.2",
    "globals": "^15.12.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nyc": "^17.1.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  }
}
